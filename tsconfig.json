{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "esModuleInterop": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowJs": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Alias */
    "paths": {
      "@trainingsapp/models/*": ["src/models/*"],
      "@trainingsapp/di/*": ["src/di/*"],
      "@trainingsapp/components/*": ["src/components/*"],
      "@trainingsapp/pages/*": ["src/pages/*"],
      "@trainingsapp/utils/*": ["src/utils/*"],
    }
  },
  "include": ["src"],
}
